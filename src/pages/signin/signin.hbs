<form class="form-container">
  {{> FormTitle title="Регистрация"}}
  
  {{> Input
    label="Почта"
    type="email"
    name="email"
    placeholder=" "
  }}

  {{> Input
    label="Логин"
    type="text"
    name="login"
    placeholder=" "
  }}

  {{> Input
    label="Имя"
    type="text"
    name="first_name"
    placeholder=" "
  }}

  {{> Input
    label="Фамилия"
    type="text"
    name="second_name"
    placeholder=" "
  }}

  {{> Input
    label="Телефон"
    type="tel"
    name="phone"
    placeholder=" "
  }}

  {{> Input
    label="Пароль"
    type="password"
    name="password"
    placeholder=" "
  }}

  {{> Input
    label="Пароль (еще раз)"
    type="password"
    name="password_confirm"
    placeholder=" "
  }}

  {{> Button
    text="Зарегистрироваться"
    type="submit"
  }}
  
  {{> Link href="/login" text="Уже есть аккаунт? Войти" class="signin-link" }}

</form>
